<%= search_form_for @q do |f| %>

 
  <%= f.label :nome_produto %>
  <%= f.search_field :nome_cont, placeholder:" Digite aqui para pesquisar" %>

  

  <%= f.submit %>
<% end %>

<p id="notice"><%= notice %></p>

<h1><b>Listando Produtos</b></h1>

    <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="thead-dark">
    <tr>
      
      <th>Nome</th>
      <th>Preco</th>
      <th>Fornecedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.preco %></td>
        <td><%= produto.fornecedor.nome %></td>
        <td><%= link_to 'Mostrar', produto %></td>
        <td><%= link_to 'Alterar', edit_produto_path(produto) %></td>
        <td><%= link_to 'Excluir', produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

