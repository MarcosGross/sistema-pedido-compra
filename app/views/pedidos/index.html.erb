<%= search_form_for @q do |f| %>
 
<td><%= f.date_field :created_at_gteq, required: true %></td>

<td><%= f.date_field :updated_at_lteq,  :value => Date.tomorrow.strftime('%Y-%m-%d'), required: true %></td>

  <%= f.submit %>
<% end %>


<p id="notice"><%= notice %></p>


<h1><b>Listando Pedidos</b></h1>

<div class="table-responsive">
<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Data pedido</th>
      <th>Nome fornecedor</th>
      <th>Quantidade itens</th>
      <th>Status pedido</th>
      <th>Valorpedido</th>
      <th>Data_hora envio</th>
      <th>Data_hora recebimento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.data_pedido %></td>
        <td><%= pedido.fornecedor.nome %></td>
        <td><%= pedido.quantidade_itens %></td>
        <td><%= pedido.status_pedido %></td>
        <td><%= pedido.valor_pedido %></td>
        <td><%= pedido.data_hora_envio %></td>
        <td><%= pedido.data_hora_recebimento %></td>
        <td><%= link_to 'Mostrar', pedido %></td>
        <td><%= link_to 'Alterar', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Excluir', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

