<div class="container-fluid">
<div class="row">
<div class="col-md-6 col-md-offset-3">
 
 <br>
  <br>
   <br>

 
 <h2 class="text-center">Acessar Sistema</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="text-center">
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder:" Digite seu e-mail", class: "form-control", autofocus: true, autocomplete: "email" %>
  
    <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder:" Sua senha secreta",  class: "form-control", autocomplete: "current-password" %>
  </div>
  </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>